<%= form_for(participation) do |f| %>
  <% if participation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(participation.errors.count, "error") %> prohibited this participation from being saved:</h2>

      <ul>
      <% participation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="dropdown-menu">
	<%= f.label :user_id %>
	<%= f.collection_select :user_id, User.all, :id, :full_name, include_blank: true %>
  </div>
  
  <div class="dropdown-menu">
	<%= f.label :activity_id %>
	<%= f.collection_select :activity_id, Activity.all, :id, :name, include_blank: true %>
  </div> 

  <div class="field">
    <%= f.label :value %>
    <%= f.text_field :value %>
  </div>
  
	<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


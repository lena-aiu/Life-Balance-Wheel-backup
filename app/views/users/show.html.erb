<p id="notice"><%= notice %></p>

<% content_for :content do %>
</br>
	<div class="container text-center">
	  <h1 class="display-1 mt-5">Users - Participants</h1>
	  	  <img class="mb-4 img-fluid rounded mx-auto d-none d-sm-block" src="/assets/Users.png" alt="users">
	  <p class="lead mb-5">Contact Information of Participants</p>
	</div>

	<p>
	  <strong>First name:</strong>
	  <%= @user.first_name %>
	</p>

	<p>
	  <strong>Last name:</strong>
	  <%= @user.last_name %>
	</p>

	<p>
	  <strong>Phone:</strong>
	  <%= @user.phone %>
	</p>

	<p>
	  <strong>Email:</strong>
	  <%= @user.email %>
	</p>

	<table>
	  <thead>
		<tr>
		  <th>Activity Name</th>
		  <th>Trainer(Score)</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @user.activities.each do |activity| %>
		  <tr>
			<td><%= activity.name %></td>
			<td><%= activity.score %></td>
			<td><%= link_to 'Show', activity %></td>
			<td><%= link_to 'Edit', edit_activity_path(activity) %></td>
			<td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		  <tr>
			<td><%= link_to 'New Activity', new_activity_path %></td>	
		  </tr>
		<% end %>
	  </tbody>
	</table>
	<br>

	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>
	
	<table>
	  <thead>
		<tr>
		  <th>Sector Name</th>
		  <th>Trainer</th>
		  <th>Value</th>
		        <th>Sector ID</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @user.sectors.each do |sector| %>
		  <tr>
			<td><%= sector.name %></td>
			<td><%= sector.trainer %></td>
			<td><%= sector.value %></td>
			        <td><%= sector.id %></td>
			<td><%= link_to 'Show', sector %></td>
			<td><%= link_to 'Edit', edit_sector_path(sector) %></td>
			<td><%= link_to 'Destroy', sector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		  <tr>
			<td><%= link_to 'New Sector', new_sector_path %></td>	
		  </tr>
		<% end %>
	  </tbody>
	</table>
	<br>

	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>

<% end %>

<%= render template: "layouts/application" %>
